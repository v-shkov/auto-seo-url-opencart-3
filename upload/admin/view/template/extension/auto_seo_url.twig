{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-auto-seo-url" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
          <i class="fa fa-save"></i>
        </button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading" style="display:flex;align-items:center;justify-content:space-between;">
        <h3 class="panel-title" style="margin:0;">
          <span><i class="fa fa-cog"></i> {{ text_edit }}</span>
          <button type="button"
                  class="btn btn-info btn-xs"
                  data-toggle="modal"
                  data-target="#AutoSeoHelpModal"
                  title="{{ text_help }}">
            <i class="fa fa-info-circle" style="margin-right:0;"></i>
          </button>
        </h3>
      </div>

      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-auto-seo-url" class="form-horizontal">
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-cron-status">{{ text_cron_status }}</label>
            <div class="col-sm-10">
              <select name="auto_seo_url_cron_status" id="input-cron-status" class="form-control">
                <option value="1" {% if auto_seo_url_cron_status %}selected="selected"{% endif %}>{{ text_enabled }}</option>
                <option value="0" {% if not auto_seo_url_cron_status %}selected="selected"{% endif %}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_cron_path }}</label>
            <div class="col-sm-10">
              <input type="text" value="{{ cron_link }}" class="form-control" readonly style="cursor:not-allowed;" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_generate }}</label>
            <div class="col-sm-10">
              <button type="submit" name="action_generate" value="1" class="btn btn-success">
                <i class="fa fa-play"></i> {{ button_generate }}
              </button>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-12">
              <div class="alert alert-warning" style="color:#8a6d3b;background-color:#fcf8e3;border-color:#faebcc;">
                <strong>{{ text_cron_title }}</strong> {{ text_cron_info }}
                <div style="margin-top:5px;font-size:12px;line-height:1.6;">
                  <div><code>{{ cron_php }}</code></div>
                  <div style="margin-top:5px;"><code>{{ cron_wget }}</code></div>
                  <div style="margin-top:5px;"><code>{{ cron_curl }}</code></div>
                  <div style="margin-top:5px;">
                    {{ text_cron_manual }}
                    <a href="{{ cron_url }}" target="_blank">{{ cron_url }}</a>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="AutoSeoHelpModal" tabindex="-1" role="dialog" aria-labelledby="autoSeoHelpLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <i class="fa fa-times" aria-hidden="true"></i>
        </button>
        <h4 class="modal-title" id="autoSeoHelpLabel">
          <i class="fa fa-info-circle"></i> {{ heading_title }}
        </h4>
      </div>
      <div class="modal-body">
        <div class="help-text">
          {{ help_auto_seo_url }}
        </div>
      </div>
      <div class="modal-footer">
        <div class="text-center">{{ text_footer_help }}</div>
      </div>
    </div>
  </div>
</div>

{{ footer }}
